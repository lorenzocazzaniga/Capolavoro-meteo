<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="METEO_GREPPI.Views.SettingsPage"            
             Title="SettingsPage">

    <VerticalStackLayout BackgroundColor="{AppThemeBinding Light= {StaticResource BackGroundLight},Dark= {StaticResource BackGroundDark}}">
        
        <Grid ColumnDefinitions="*,*"
          RowDefinitions="auto,auto,auto,*">

            <HorizontalStackLayout>
                <Switch Toggled="Switch_Toggled"
                        x:Name="geolocationSwitch"/>
                <Label Text="abilita la geolocalizzazione"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="18"/>
            </HorizontalStackLayout>


